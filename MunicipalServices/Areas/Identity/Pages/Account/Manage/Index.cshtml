@page
@model IndexModel
@{
    ViewData["Title"] = "الملف الشخصي";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row">
        <div class="col-md-6 text-right">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.FullName" class="input-label text-right"></label>
                    <input asp-for="Input.FullName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="input-label text-right"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber" class="input-label text-right"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">حفظ</button>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
