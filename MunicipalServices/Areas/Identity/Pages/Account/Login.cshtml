@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل دخول";
}
<div class="roots-content-wrapper my-4 container-fluid dir-rtl" style="min-height:600px">

    <div class="row">
        <div class="col-md-4  dir-rtl">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="input-label text-right"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger text-right"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="input-label text-right"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger text-right"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="input-label text-right">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="roots-btn btn btn-primary">تسجيل دخول</button>
                    </div>
                    <div class="form-group ">
                        <p class="text-right">
                            <a id="forgot-password" asp-page="./ForgotPassword">نسيت كلمة المرور الخاصة بك؟</a>
                        </p>
                        <p class="text-right">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">سجل كمستخدم جديد</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
