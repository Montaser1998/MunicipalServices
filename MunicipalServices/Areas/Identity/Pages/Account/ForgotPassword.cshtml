@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "نسيت كلمة المرور الخاصة بك";
}
<div class="roots-content-wrapper my-4 container-fluid dir-rtl text-right" style="min-height:700px">

    <h4>ادخل بريدك الإلكتروني.</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="input-label text-right"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">إرسال</button>
            </form>
        </div>
    </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
