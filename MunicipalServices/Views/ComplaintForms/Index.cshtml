@model IEnumerable<MunicipalServices.Data.ComplaintForm>

@{
    ViewData["Title"] = "ComplaintForms";
}

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.FullName).Titled("الاسم الرباعي");
        columns.Add(model => model.PhoneNumber).Titled("رقم الهاتف");
        columns.Add(model => model.IdentificationNumber).Titled("رقم الهوية");
        columns.Add(model => model.ComplaintType).Titled("نوع الشكوى");
        columns.Add(model => model.SubjectComplaint).Titled("موضوع الشكوى");
        columns.Add(model => model.AreaName).Titled("اسم المنطقة");
        columns.Add(model => model.FullAddress).Titled("العنوان كاملا");
        columns.Add(model => model.User.FullName).Titled("تم بواسطة");
        columns.Add(model => $"<div class=\"dropdown\">" +
        $"<button class=\"table-dropdow-btn btn\" type=\"button\" data-toggle=\"dropdown\" aria-haspopup=\"true\" aria-expanded=\"false\">...</button>" +
        $"<div class=\"dropdown-menu dropdown-menu-right\" aria-labelledby=\"dropdownmenubutton\">" +
        $"<a class=\"dropdown-item\" href=\"ComplaintForms/edit/{model.ID}\">تعديل</a>" +
        $"<a class=\"dropdown-item\" href=\"ComplaintForms/details/{model.ID}\">تفاصيل</a>" +
        $"<a class=\"dropdown-item\" href=\"ComplaintForms/delete/{model.ID}\">حذف</a>" +
        $"</div></div>").Encoded(false);
    })
    .Using(GridFilterMode.Row)
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
)


