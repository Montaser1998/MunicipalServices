@model IEnumerable<MunicipalServices.Data.ComplaintForm>

@{
    ViewData["Title"] = "ComplaintForms";
}

<div class="table-responsive">
    <table class="roots-table table borderless" cellspacing="0">
        <thead>
            <tr class="table-row-thead">
                <th scope="col">@Html.DisplayNameFor(model => model.FullName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.IdentificationNumber)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.AreaName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.FullAddress)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.ComplaintType)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.SubjectComplaint)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-row-item">
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.IdentificationNumber)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.AreaName)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.FullAddress)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.ComplaintType)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.SubjectComplaint)</td>
                    <td class="table-text table-product-more-btn">
                        <div class="dropdown">
                            <button class="table-dropdow-btn btn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">...</button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownmenubutton">
                                <a class="dropdown-item" asp-action="edit" asp-route-id="@item.ID">Edit</a>
                                <a class="dropdown-item" asp-action="details" asp-route-id="@item.ID">Details</a>
                                <a class="dropdown-item" asp-action="delete" asp-route-id="@item.ID">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
