@model MunicipalServices.Data.VacationRequest

@{
    ViewData["Title"] = "طلب اجازة";
}
<div class="roots-content-wrapper my-4 container-fluid dir-rtl" style="min-height:700px">

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="content-box mt-2">
            <div class="content-box-header">
                <h3 class="content-box__title text-right">تعديل</h3>
            </div>
            <div class="content-box-body">
                <div class="content-box-body__row row">
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="DaysVacation" class="input-label text-right"></label>
                        <input asp-for="DaysVacation" class="form-control" />
                        <span asp-validation-for="DaysVacation" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="StartVacationDate" class="input-label text-right"></label>
                        <input asp-for="StartVacationDate" class="form-control" />
                        <span asp-validation-for="StartVacationDate" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="EndVacationDate" class="input-label text-right"></label>
                        <input asp-for="EndVacationDate" class="form-control" />
                        <span asp-validation-for="EndVacationDate" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="City" class="input-label text-right"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="Street" class="input-label text-right"></label>
                        <input asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="PhoneNumber" class="input-label text-right"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="NameAssignee" class="input-label text-right"></label>
                        <input asp-for="NameAssignee" class="form-control" />
                        <span asp-validation-for="NameAssignee" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="VacationType" class="input-label text-right"></label>
                        <select asp-for="VacationType" asp-items="ViewBag.VacationType" class="form-control"></select>
                        <span asp-validation-for="VacationType" class="text-danger"></span>
                    </div>
                    @*<div class="form-item-valid form-group form-check col-12 col-md-6">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Agree" /> @Html.DisplayNameFor(model => model.Agree)
                        </label>
                    </div>*@
                </div>
            </div>
            <br />
            <div class="root-space__btn-wrapp col-12">
                <a asp-action="Index" class="roots-btn btn btn-secondary ml-3">إلغاء</a>
                <button type="submit" class="roots-btn btn btn-primary roots-btn-w-plus">حفظ</button>
            </div>
            <br />
        </div>
    </form>
        </div>
