@model IEnumerable<MunicipalServices.Data.VacationRequest>

@{
    ViewData["Title"] = "VacationRequests";
}

<div class="table-responsive">
    <table class="roots-table table borderless" cellspacing="0">
        <thead>
            <tr class="table-row-thead">
                <th scope="col">@Html.DisplayNameFor(model => model.DaysVacation)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.StartVacationDate)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.EndVacationDate)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.City)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Street)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.NameAssignee)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.VacationType)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Agree)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-row-item">
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.DaysVacation)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.StartVacationDate)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.EndVacationDate)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.City)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.Street)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.NameAssignee)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.VacationType)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.Agree)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.User.FullName)</td>
                    <td class="table-text table-product-more-btn">
                        <div class="dropdown">
                            <button class="table-dropdow-btn btn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">...</button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownmenubutton">
                                <a class="dropdown-item" asp-action="edit" asp-route-id="@item.ID">Edit</a>
                                <a class="dropdown-item" asp-action="details" asp-route-id="@item.ID">Details</a>
                                <a class="dropdown-item" asp-action="delete" asp-route-id="@item.ID">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>