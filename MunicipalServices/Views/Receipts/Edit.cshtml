@model MunicipalServices.Data.Receipts

@{
    ViewData["Title"] = "Receipt";
}

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="content-box mt-2">
        <div class="content-box-header">
            <h3 class="content-box__title">Edit</h3>
        </div>
        <div class="content-box-body">
            <div class="content-box-body__row row">
                <div class="form-item-valid form-group col-12 col-md-6">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-item-valid form-group col-12 col-md-6">
                    <label asp-for="AmountOfMoneyNumber" class="control-label"></label>
                    <input asp-for="AmountOfMoneyNumber" class="form-control" />
                    <span asp-validation-for="AmountOfMoneyNumber" class="text-danger"></span>
                </div>
                <div class="form-item-valid form-group col-12 col-md-6">
                    <label asp-for="AmountOfMoneyText" class="control-label"></label>
                    <input asp-for="AmountOfMoneyText" class="form-control" />
                    <span asp-validation-for="AmountOfMoneyText" class="text-danger"></span>
                </div>
                <div class="form-item-valid form-group col-12 col-md-6">
                    <label asp-for="Reason" class="control-label"></label>
                    <input asp-for="Reason" class="form-control" />
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div class="form-item-valid form-group col-12 col-md-6">
                    <label asp-for="OnAccount" class="control-label"></label>
                    <input asp-for="OnAccount" class="form-control" />
                    <span asp-validation-for="OnAccount" class="text-danger"></span>
                </div>
                <div class="form-item-valid form-group col-12 col-md-6">
                    <label asp-for="ReceivedFrom" class="control-label"></label>
                    <input asp-for="ReceivedFrom" class="form-control" />
                    <span asp-validation-for="ReceivedFrom" class="text-danger"></span>
                </div>
                <div class="form-item-valid form-group col-12 col-md-6">
                    <label asp-for="Currency" class="control-label"></label>
                    <select asp-for="Currency" class="form-control"></select>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div class="root-space__btn-wrapp col-12">
            <a asp-action="Index" class="roots-btn btn btn-secondary mr-3">Cancel</a>
            <button type="submit" class="roots-btn btn btn-primary roots-btn-w-plus">Save</button>
        </div>
        <br />
    </div>
</form>