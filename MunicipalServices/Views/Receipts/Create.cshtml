@model MunicipalServices.Data.Receipts

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Receipts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfMoneyNumber" class="control-label"></label>
                <input asp-for="AmountOfMoneyNumber" class="form-control" />
                <span asp-validation-for="AmountOfMoneyNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfMoneyText" class="control-label"></label>
                <input asp-for="AmountOfMoneyText" class="form-control" />
                <span asp-validation-for="AmountOfMoneyText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OnAccount" class="control-label"></label>
                <input asp-for="OnAccount" class="form-control" />
                <span asp-validation-for="OnAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceivedFrom" class="control-label"></label>
                <input asp-for="ReceivedFrom" class="form-control" />
                <span asp-validation-for="ReceivedFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" class="form-control">
                    <option value="0">شيكل</option>
                    <option value="1">الدولار</option>
                    <option value="2">الدينار</option>
                </select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class ="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Deleted" /> @Html.DisplayNameFor(model => model.Deleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
