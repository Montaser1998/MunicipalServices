@model MunicipalServices.Data.Receipts

@{
    ViewData["Title"] = "سند الصرف";
}
<div class="roots-content-wrapper my-4 container-fluid dir-rtl" style="min-height:600px">

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="content-box mt-2">
            <div class="content-box-header">
                <h3 class="content-box__title text-right">إضافة جديد</h3>
            </div>
            <div class="content-box-body">
                <div class="content-box-body__row row">
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="FullName" class="input-label text-right"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="AmountOfMoneyNumber" class="input-label text-right"></label>
                        <input asp-for="AmountOfMoneyNumber" class="form-control" />
                        <span asp-validation-for="AmountOfMoneyNumber" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="AmountOfMoneyText" class="input-label text-right"></label>
                        <input asp-for="AmountOfMoneyText" class="form-control" />
                        <span asp-validation-for="AmountOfMoneyText" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="Reason" class="input-label text-right"></label>
                        <input asp-for="Reason" class="form-control" />
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="OnAccount" class="input-label text-right"></label>
                        <input asp-for="OnAccount" class="form-control" />
                        <span asp-validation-for="OnAccount" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="ReceivedFrom" class="input-label text-right"></label>
                        <input asp-for="ReceivedFrom" class="form-control" />
                        <span asp-validation-for="ReceivedFrom" class="text-danger"></span>
                    </div>
                    <div class="form-item-valid form-group col-12 col-md-6">
                        <label asp-for="Currency" class="input-label text-right"></label>
                        <select asp-for="Currency" asp-items="ViewBag.CurrencyType" class="form-control"></select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="root-space__btn-wrapp col-12">
                <a asp-action="Index" class="roots-btn btn btn-secondary ml-3">Cancel</a>
                <button type="submit" class="roots-btn btn btn-primary roots-btn-w-plus">Create</button>
            </div>
            <br />
        </div>
    </form>
        </div>
