@model IQueryable<MunicipalServices.Data.ConstructionDetails>

@{
    ViewData["Title"] = "تفاصيل البناء";
}

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.ConstructionDescription).Titled("وصف البناء");
        columns.Add(model => model.Amount).Titled("الكمية");
        columns.Add(model => model.MeasruingUnit).Titled("وحدة القياس");
        columns.Add(model => model.UnitPrice).Titled("سعر الوحدة");
        columns.Add(model => model.Total).Titled("المجموع");
        columns.Add(model => model.CreatedDate).Titled("تاريخ الإنشاء");
        columns.Add(model => model.UpdatedDate).Titled("اخر تعديل");
        columns.Add(model => model.User.FullName).Titled("تم بواسطة");
        columns.Add(model => $"<div class=\"dropdown\">" +
        $"<button class=\"table-dropdow-btn btn\" type=\"button\" data-toggle=\"dropdown\" aria-haspopup=\"true\" aria-expanded=\"false\">...</button>" +
        $"<div class=\"dropdown-menu dropdown-menu-right\" aria-labelledby=\"dropdownmenubutton\">" +
        $"<a class=\"dropdown-item\" href=\"ConstructionDetails/edit/{model.ID}\">تعديل</a>" +
        $"<a class=\"dropdown-item\" href=\"ConstructionDetails/details/{model.ID}\">تفاصيل</a>" +
        $"<a class=\"dropdown-item\" href=\"ConstructionDetails/delete/{model.ID}\">حذف</a>" +
        $"</div></div>").Encoded(false);
    })
    .Using(GridFilterMode.Row)
    .Empty("لا يوجد بيانات حاليا")
    .Filterable()
    .Sortable()
    .Pageable()
)

