@model IEnumerable<MunicipalServices.Data.ConstructionDetails>

@{
    ViewData["Title"] = "ConstructionDetails";
}

<div class="table-responsive">
    <table class="roots-table table borderless" cellspacing="0">
        <thead>
            <tr class="table-row-thead">
                <th scope="col">@Html.DisplayNameFor(model => model.ConstructionDescription)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Amount)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.MeasruingUnit)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.UnitPrice)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Total)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.UpdatedDate)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.CreatedDate)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-row-item">
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.ConstructionDescription)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.MeasruingUnit)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.Total)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.UpdatedDate)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    <td class="table-bold-text">@Html.DisplayFor(modelItem => item.User.FullName)</td>
                    <td class="table-text table-product-more-btn">
                        <div class="dropdown">
                            <button class="table-dropdow-btn btn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">...</button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownmenubutton">
                                <a class="dropdown-item" asp-action="edit" asp-controller="ConstructionDetails" asp-route-id="@item.ID">Edit</a>
                                <a class="dropdown-item" asp-action="details" asp-controller="ConstructionDetails" asp-route-id="@item.ID">Details</a>
                                <a class="dropdown-item" asp-action="delete" asp-controller="ConstructionDetails" asp-route-id="@item.ID">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>