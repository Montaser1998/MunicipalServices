@model MunicipalServices.Data.CatchReceipts

@{
    ViewData["Title"] = "سند القبض";
}

<div class="roots-content-wrapper my-4 container-fluid dir-rtl" style="min-height:700px">

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="content-box mt-2">
            <div class="content-box-header">
                <h3 class="content-box__title text-right">تعديل</h3>
            </div>

            <div class="content-box-body">

                <div class="content-box-body">
                    <div class="content-box-body__row row">
                        <div class="form-item-valid form-group col-12 col-md-6">
                            <label asp-for="FullName" class="input-label text-right"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-item-valid form-group col-12 col-md-6">
                            <label asp-for="AmountOfMoneyNumber" class="input-label text-right"></label>
                            <input asp-for="AmountOfMoneyNumber" class="form-control" />
                            <span asp-validation-for="AmountOfMoneyNumber" class="text-danger"></span>
                        </div>
                        <div class="form-item-valid form-group col-12 col-md-6">
                            <label asp-for="AmountOfMoneyText" class="input-label text-right"></label>
                            <input asp-for="AmountOfMoneyText" class="form-control" />
                            <span asp-validation-for="AmountOfMoneyText" class="text-danger"></span>
                        </div>
                        <div class="form-item-valid form-group col-12 col-md-6">
                            <label asp-for="Reason" class="input-label text-right"></label>
                            <input asp-for="Reason" class="form-control" />
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                        <div class="form-item-valid form-group col-12 col-md-6">
                            <label asp-for="ToAccount" class="input-label text-right"></label>
                            <input asp-for="ToAccount" class="form-control" />
                            <span asp-validation-for="ToAccount" class="text-danger"></span>
                        </div>
                        <div class="form-item-valid form-group col-12 col-md-6">
                            <label asp-for="Currency" class="input-label text-right"></label>
                            <select asp-for="Currency" asp-items="ViewBag.CurrencyType" class="form-control"></select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="root-space__btn-wrapp col-12 dir-rtl">
                <a asp-action="Index" class="roots-btn btn btn-secondary ml-3">إلغاء</a>
                <button type="submit" class="roots-btn btn btn-primary roots-btn-w-plus">حفظ</button>
            </div>
            <br />
        </div>
    </form>
</div>

